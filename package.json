{
	"name": "ocaml-toplevel-loader",
	"publisher": "coco33920",
	"displayName": "ocaml_toplevel_loader",
	"description": "A simple and lazy file-to-toplevel loader for OCAML",
	"version": "0.0.2",
	"repository": {"url": "https://github.com/coco33920/ocaml-toplevel-loader"},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ocaml-toplevel-loader.loadIntoToplevel",
		"onLanguage:ocaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ocaml-toplevel-loader.loadIntoToplevel",
				"title":"Load Into Toplevel",
				"icon" : "$(debug-start)"
			}
		],
		"keybindings": [
			{
				"command": "ocaml-toplevel-loader.loadIntoToplevel",
				"key": "ctrl+t",
				"mac": "cmd+t"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == ocaml",
					"command": "ocaml-toplevel-loader.loadIntoToplevel",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
